<% flash.each do |name, msg| %>
  <% if msg.is_a? String %>
    <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 col-lg-8 col-lg-offset-2 text-center">
      <div class="alert alert-<%= name == "notice" ? "success" : "danger" %>" role="alert">
        <%= msg.html_safe %>
      </div>
    </div>
  <% end %>
<% end %>